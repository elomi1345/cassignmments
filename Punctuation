# include<ctype.h>
# include <string.h>
# include <iostream>
#include <vector>

using namespace std;
int main(){
 string sentence;

 cout<<"enter a sentence please:";

 getline(cin,sentence);

unsigned int i=0;

for(i=0; i<sentence.size();i++){

    
  if(! ispunct(sentence[i])){
        
vector<char> b;

b.push_back(sentence[i]);
for(char j : b)
    cout<<j;
  }


}

}
